/* 
    Faca uma funcao que receba uma palavra e retorne a mesma na ordem reversa
*/

function ordemReversa(str) {
    
    let reverseStr = ""
    //precisa percorrer o array, e imprimir de forma inversa.

    for( let i = str.length - 1 ; i >= 0; i--) {
        reverseStr += str[i]
    }

    console.log(reverseStr)
}

const str =  "barco"

console.log(ordemReversa(str))
